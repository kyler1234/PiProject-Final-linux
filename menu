import pygame
import TheBestGameEver
import dumbmenu as dm
from tkinter import messagebox
pygame.init()

# Just a few static variables
red   = 255,  0,  0
green =   0,255,  0
blue  =   0,  0,255

size = width, height = 340,240	
screen = pygame.display.set_mode(size)
screen.fill(blue)
pygame.display.update()
pygame.key.set_repeat(500,30)

choose = dm.dumbmenu(screen, [
                        'Start Game',
                        'Options',
                        'How To Play',
                        'Show Highscore',
                        'Quit Game'], 64,64,None,32,1.4,green,red)

if choose == 0:
    exec(open("TheBestGameEver.py").read())
if choose == 1:
    print ("You choose 'Options'.")
if choose == 2:
    messagebox.showinfo("Instructions", "Use the arrow keys to control your snake. Eat as many apples as you can to grow as long as possible. But don't hit the wall, or eat your tail!")
if choose == 3:
    print ("You choose 'Show Highscore'.")
if choose == 4:
    pygame.quit
